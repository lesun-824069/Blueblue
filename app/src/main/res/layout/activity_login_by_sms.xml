<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.login.LoginBySMSActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="66dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@mipmap/icon_qq"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginStart="6dp"
                android:text="QQ"
                android:textSize="45sp"
                android:textColor="@color/black"/>

        </LinearLayout>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_qq">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_head_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/img_head"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/et_account_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/iv_head_image"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:background="@null"
            android:hint="@string/account_input"
            android:inputType="text"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:focusable="true"
            tools:ignore="TextFields" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_account_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/icon_clean" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/shape_qq">

        <View
            android:visibility="invisible"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/view"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"/>


        <EditText
            android:id="@+id/et_password_input"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_toEndOf="@id/view"
            android:layout_marginEnd="50dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:background="#E8EAF6"
            android:hint="@string/please_input_password"
            android:inputType="textPassword"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:focusable="true"
            tools:ignore="TextFields" />

        <ImageView
            android:visibility="visible"
            android:id="@+id/iv_password_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="16dp"
            android:src="@mipmap/icon_clean" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="75dp">

        <RelativeLayout
            android:id="@+id/rl_login"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shape_login_btn_enable">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_right"/>

        </RelativeLayout>



    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/tv_login_by_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/login_by_phone"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_retrieve_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/retrieve_password"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <View
                android:layout_width="1dp"
                android:layout_height="14dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/register_new_user"
                android:textColor="@color/black"
                android:textSize="14sp"/>

        </LinearLayout>

    </RelativeLayout>




</LinearLayout>